#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

NGINX_CFG_FILE=$OPENSHIFT_NGINX_DIR/configuration/etc/nginx.conf
NGINX_PID_FILE=$OPENSHIFT_NGINX_DIR/run/nginx.pid

function start() {
    $OPENSHIFT_NGINX_DIR/usr/sbin/nginx -p $OPENSHIFT_NGINX_DIR -c $NGINX_CFG_FILE -g "error_log $OPENSHIFT_NGINX_LOG_DIR/error.log;" >> $OPENSHIFT_NGINX_LOG_DIR/error.log 2>&1
}

function stop() {
    if [ -f "$NGINX_PID_FILE" ]; then
        nginx_pid=`cat "$NGINX_PID_FILE" 2> /dev/null`
    fi
    if [ -n "$nginx_pid" ]; then
        kill $nginx_pid
        wait_for_stop $nginx_pid
    fi
}

function status() {
   if output=$(curl -XHEAD http://$OPENSHIFT_NGINX_IP:$OPENSHIFT_NGINX_PORT/ 2>&1 )
   then
      client_result "Application is running"
      return 0
   else
      client_result "Application is either stopped or inaccessible"
      return 1
   fi
}

function tidy() {
    client_message "Emptying log dir: $OPENSHIFT_NGINX_LOG_DIR"
    shopt -s dotglob
    rm -rf $OPENSHIFT_NGINX_LOG_DIR/*
    return 0
}

function build() {
    return 0
}

case "$1" in
  start)           start;;
  stop)            stop;;
  restart)         stop; start;;
  status)          status;;
  tidy)            tidy;;
  deploy)          exit 0;;
  *)               exit 0
esac
